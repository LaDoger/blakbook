<!DOCTYPE html>
<html>
  <head>
    <title>blakbook</title>
    <style>
      html {
        background-color: Black;
      }
      
      pre {
        border: 2px solid WhiteSmoke;
        border-radius: 8px;
        margin: 20px auto;
        padding: 5px 5px 5px 10px;
        height: calc(100vh - 60px);
        max-width: calc(79ch + 5px);
        overflow-x: hidden;
        overflow-y: scroll;
        color: WhiteSmoke;
        line-height: 26px;
        text-align: left;
        font-size: 24px;
        font-family: Monaco, Consolas, "Microsoft YaHei";
        white-space: normal;
      }
      
      pre:focus {
        outline: none;
      }
      
      ::-webkit-scrollbar {
        width: 5px;
      }

      ::-webkit-scrollbar-thumb {
        background: WhiteSmoke;
        border-radius: 3px;
      }
    </style>
  </head>
  <body onload="onload()">
    <pre id="box" spellcheck="false" contenteditable="true"></pre>
  <body>
  <script>
    function focusBox() {           
      document.getElementById("box").focus();
    }

    function changeTitle() {
      var title = location.href
      title = title.replace("\\", "/");
      title = title.replace(".html", "");
      title = title.replace(".htm", "");
      title = title.split("/").slice(-1);
      title += " - blakbook";
      document.title = title;
    }

    function onload() {
      focusBox();
      changeTitle();
    }

    function theme(backgroundColor, color) {
      document.getElementsByTagName("html")[0].style.backgroundColor=backgroundColor;
      document.getElementsByTagName("pre")[0].style.borderColor=color;
      document.getElementsByTagName("pre")[0].style.color=color;
    }

    function white() {
      theme("WhiteSmoke", "Black");
    }

    function pink() {
      theme("Pink", "Red");
    }

    function red() {
      theme("Red", "Gold");
    }

    function matrix() {
      theme("Black", "Lime");
    }

    function blue() {
      theme("LightCyan", "Navy");
    }

    function black() {
      theme("Black", "WhiteSmoke");
    }
  </script>
</html>
